{
  "name": "northrook/view",
  "description": "An asset generator written in PHP. Creates optimised, public versions of assets from various sources.",
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Martin",
      "email": "mn@northrook.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Core\\View\\": "src"
    }
  },
  "scripts": {
    "phpstan": "@php vendor/bin/phpstan analyse"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require": {
    "php": ">=8.3",
    "ext-dom": "*",
    "ext-libxml": "*",
    "northrook/core": "dev-main",
    "northrook/pathfinder": "dev-main",
    "northrook/core-symfony": "dev-main",
    "northrook/assets": "dev-main",
    "latte/latte": "@stable",
    "northrook/view-element": "dev-main"
  },
  "require-dev": {
    "phpstan/phpstan": "@stable",
    "northrook/dev-env": "dev-main"
  }
}
